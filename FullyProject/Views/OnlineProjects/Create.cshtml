@model FullyProject.Models.OnlineProject

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}



<div class="app-content content container-fluid">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-xs-12 mb-1">
                <h2 class="content-header-title">المشاريع</h2>
            </div>
            <div class="content-header-right breadcrumbs-right breadcrumbs-top col-md-6 col-xs-12">
                <div class="breadcrumb-wrapper col-xs-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="~/Dashborad/Index">الصفحة الرئيسية</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">مشاريع</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a href="~/OnlineProjects/Create">اضافة مشروع</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <script>
            function Reset()
            {
                document.getElementById("nameofproject").value =
                document.getElementById("dateofstartproject").value =
                document.getElementById("Diteals").value = '';
            }
        </script>
        <div class="content-body">
            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">
                <div class="row match-height">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-form">اضافة مشروع</h4>
                                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body collapse in">
                                <div class="card-block">

                                   
@using (Html.BeginForm("Create", "OnlineProjects", FormMethod.Post, new { enctype = "multipart/form-data" }))


{
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-body">
                                            <h4 class="form-section">المشاريع</h4>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label " })

                                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", id = "nameofproject", placeholder = "مسمئ المشروع", name = "fname" } })
                                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })


                                                        
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.dateOfStarted, htmlAttributes: new { @class = "control-label " })

                                                        @Html.EditorFor(model => model.dateOfStarted, new { htmlAttributes = new { @class = "form-control", id = "dateofstartproject", name = "date" } })
                                                        @Html.ValidationMessageFor(model => model.dateOfStarted, "", new { @class = "text-danger" })


                                                       
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <h4 class="form-section">الصورة الرئيسية</h4>
                                                    <div class="form-group">
                                                        <label>اختيار الصورة</label>
                                                        <label id="projectinput7" class="file center-block">
                                                            <input type="file" id="file" name="photo">
                                                            <span class="file-custom"></span>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <h4 class="form-section">الصور الفرعية</h4>
                                                    <label>اختيار الصورة</label>
                                                    <label id="projectinput7" class="file center-block">
                                                        <input type="file" id="file" name="photos" multiple>
                                                        <span class="file-custom"></span>
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h4 class="form-section">@Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label " })</h4>
                                                    

                                                    @Html.TextAreaFor(model => model.description, new { htmlAttributes = new { @class = "form-control", id = "Diteals", rows = "5", name = "comment", placeholder = "الوصف" } })
                                                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })


                                                   
                                                </div>
                                            </div>
                                            <div class="form-actions">
                                                <button onclick="Reset()" type="button" class="btn btn-warning  float-lg-right">
                                                    <i class="icon-cross2"></i> الغاء
                                                </button>
                                                <button type="submit" class="btn btn-primary mr-1 float-lg-right">
                                                    <i class="icon-check2"></i> حفظ
                                                </button>
                                            </div>
                                  
                                </div>
                                    }
                            </div>
                        </div>
                    </div>
                </div>
                    </div>
            </section>
            <!-- Basic form layout section end -->
        </div>
    </div>
</div>




<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
