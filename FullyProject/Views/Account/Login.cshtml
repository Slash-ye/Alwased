@using FullyProject.Models
@model LoginViewModel
@{
    ViewBag.Title = "تسجيل الدخول ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
              

 <!-- ////////////////////////////////////////////////////////////////////////////-->
<div class="app-content content container-fluid">
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <section class="flexbox-container">
                <div class="col-md-4 offset-md-4 col-xs-10 offset-xs-1  box-shadow-2 p-0">
                    <div class="card border-grey border-lighten-3 m-0">
                        <div class="card-header no-border">
                            <div class="card-title text-xs-center">
                                <div class="p-1"><img src="../../app-assets/images/logo/robust-logo-dark.png" alt=" logo"></div>
                            </div>
                            <h6 class="card-subtitle line-on-side text-muted text-xs-center font-small-3 pt-2"><span>تسجيل الدخول</span></h6>
                        </div>
                        <div class="card-body collapse in">
                            <div class="card-block">
                               
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                @Html.ValidationSummary("",new { @class="text-danger"})
                                      <fieldset class="form-group position-relative has-icon-left mb-0">
                                      
                                         @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-lg input-lg", id = "user-name", placeholder ="اسم المستخدم"  })
                                          @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                        
                                        <div class="form-control-position">
                                            <i class="icon-head"></i>
                                        </div>
                                    </fieldset>
                                    <fieldset class="form-group position-relative has-icon-left">
                                        
                                       

                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg input-lg", id = "user-password", placeholder = "كلمة السر" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        
                                         <div class="form-control-position">
                                            <i class="icon-key3"></i>
                                        </div>
                                    </fieldset>
                                    
                                    <input type="submit" value="تسجيل الدخول" class="btn btn-blue btn-lg btn-block"/>
                                }
                            </div>
                        </div>
                        
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!-- ////////////////////////////////////////////////////////////////////////////-->








@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}